
// Columnus
// ===========

// Based on the 12 column nestable Foundation Grid:
// http://foundation.zurb.com/docs/components/grid.html
// -----------------------------------------------------------------------------

// Imports
// -------
// all the units and other imports are defined in the units file.
@import 'units'


// Functions
// ---------

grid(class = 'phone', columns)

  // Iterate through our columns
  for count in (1.. columns)
    // Turn each column count to a percentage: i.e. 1/12
    percentWidth = 1% * ((count / columns) * 100)
    // Column class for the width
    .l_{class}_{count}
      width percentWidth

// Styles
// ------

.l_grid_wrap,
.l_grid
  overflow hidden

.l_grid
  list-style none
  margin 0 -1em
  clearfix()

  *
    box-sizing border-box

.l_column
  float left
  position relative
  padding 0 1em 2em

  img
    max-width 100%
    height auto
    ms-interpolation-mode bicubic

grid('phone', columns)

@media (min-width: tablet)

  grid('tablet', columns)

@media (min-width: phone)

  grid('desktop', columns)