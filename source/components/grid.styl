// Styles
// ------

.--columns_grid_wrap,
.--columns_grid
  overflow hidden

.--columns_grid
  list-style none
  margin 0 -1em
  clearfix()

  *
    box-sizing border-box

.l_column
  float left
  position relative
  padding 0 1em 2em

  img
    max-width 100%
    height auto
    ms-interpolation-mode bicubic