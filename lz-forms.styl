@import 'units'
@import 'nib/gradients'

  
.lz-form
  button
  input
    font-family 'open-sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-weight 300
    font-size 14px
    
  button
    input[type="submit"]
      background-color lzButtonBackgroundColor
      color lzButtonColor
      padding 5px 10px
      border none
      border-radius 3px
    
  input[type="submit"]
    background-color lzInputBackgroundColor
    color lzInputColor
    padding 5px 10px
    border none
    border-radius 3px
    
  button:hover
    
  input[type="submit"]:hover
    background-color: #1d7bad
  
.lz-form
  input[type="text"]
  input[type="password"]
  input[type="email"]
  input[type="url"]
  input[type="date"]
  input[type="month"]
  input[type="time"]
  input[type="datetime"]
  input[type="datetime-local"]
  input[type="week"]
  input[type="number"]
  input[type="search"]
  input[type="tel"]
  input[type="color"]
  select
  textarea
    padding: 5px 5px
    margin 0
    display: inline-block
    border: 1px solid #ccc
    box-shadow: inset 0 1px 3px #ddd
    border-radius: 4px
    box-sizing: border-box
    
  .content button,
  .content input[type="submit"]
    background-color: #218bc3
    color: #fff
    padding: 5px 10px
    border: none
    border-radius: 3px

.content button:hover,
.content input[type="submit"]:hover
  background-color: #1d7bad

input[type="color"]
    padding: 0.2em 0.5em

  input[type="text"]:focus
  input[type="password"]:focus
  input[type="email"]:focus
  input[type="url"]:focus
  input[type="date"]:focus
  input[type="month"]:focus
  input[type="time"]:focus
  input[type="datetime"]:focus
  input[type="datetime-local"]:focus
  input[type="week"]:focus
  input[type="number"]:focus
  input[type="search"]:focus
  input[type="tel"]:focus
  input[type="color"]:focus
  select:focus
  textarea:focus
    outline: 0
    outline: thin dotted \9
    /* IE6-9 */
    border-color: #129FEA

/*
Need to separate out the :not() selector from the rest of the CSS 2.1 selectors
since IE8 won't execute CSS that contains a CSS3 selector.
*/
.lz-form input:not([type]):focus
  outline: 0
  outline: thin dotted \9
  /* IE6-9 */
  border-color: #129FEA

.lz-form input[type="file"]:focus
.lz-form input[type="radio"]:focus
.lz-form input[type="checkbox"]:focus
  outline: thin dotted #333
  outline: 1px auto #129FEA

.lz-form .lz-checkbox
.lz-form .lz-radio
  margin: 0.5em 0
  display: block

.lz-form input[type="text"][disabled]
.lz-form input[type="password"][disabled]
.lz-form input[type="email"][disabled]
.lz-form input[type="url"][disabled]
.lz-form input[type="date"][disabled]
.lz-form input[type="month"][disabled]
.lz-form input[type="time"][disabled]
.lz-form input[type="datetime"][disabled]
.lz-form input[type="datetime-local"][disabled]
.lz-form input[type="week"][disabled]
.lz-form input[type="number"][disabled]
.lz-form input[type="search"][disabled]
.lz-form input[type="tel"][disabled]
.lz-form input[type="color"][disabled]
.lz-form select[disabled]
.lz-form textarea[disabled]
  cursor: not-allowed
  background-color: #eaeded
  color: #cad2d3

/*
Need to separate out the :not() selector from the rest of the CSS 2.1 selectors
since IE8 won't execute CSS that contains a CSS3 selector.
*/
.lz-form input:not([type])[disabled]
  cursor: not-allowed
  background-color: #eaeded
  color: #cad2d3

.lz-form input[readonly]
.lz-form select[readonly]
.lz-form textarea[readonly]
  background: #eee
  /* menu hover bg color */
  color: #777
  /* menu text color */
  border-color: #ccc

.lz-form input:focus:invalid
.lz-form textarea:focus:invalid
.lz-form select:focus:invalid
  color: #b94a48
  border-color: #ee5f5b

.lz-form input:focus:invalid:focus
.lz-form textarea:focus:invalid:focus
.lz-form select:focus:invalid:focus
  border-color: #e9322d

.lz-form input[type="file"]:focus:invalid:focus
.lz-form input[type="radio"]:focus:invalid:focus
.lz-form input[type="checkbox"]:focus:invalid:focus
  outline-color: #e9322d

.lz-form select
  border: 1px solid #ccc
  background-color: white

.lz-form select[multiple]
  height: auto

.lz-form label
  margin: 0.5em 0 0.2em

.lz-form fieldset
  margin: 0
  padding: 0.35em 0 0.75em
  border: 0

.lz-form legend
  display: block
  width: 100%
  padding: 0.3em 0
  margin-bottom: 0.3em
  color: #333
  border-bottom: 1px solid #e5e5e5

.lz-form-stacked input[type="text"]
.lz-form-stacked input[type="password"]
.lz-form-stacked input[type="email"]
.lz-form-stacked input[type="url"]
.lz-form-stacked input[type="date"]
.lz-form-stacked input[type="month"]
.lz-form-stacked input[type="time"]
.lz-form-stacked input[type="datetime"]
.lz-form-stacked input[type="datetime-local"]
.lz-form-stacked input[type="week"]
.lz-form-stacked input[type="number"]
.lz-form-stacked input[type="search"]
.lz-form-stacked input[type="tel"]
.lz-form-stacked input[type="color"]
.lz-form-stacked select
.lz-form-stacked label
.lz-form-stacked textarea
  display: block
  margin: 0.25em 0

/*
Need to separate out the :not() selector from the rest of the CSS 2.1 selectors
since IE8 won't execute CSS that contains a CSS3 selector.
*/
.lz-form-stacked input:not([type])
  display: block
  margin: 0.25em 0

.lz-form-aligned input
.lz-form-aligned textarea
.lz-form-aligned select
/* NOTE: lz-help-inline is deprecated. Use .lz-form-message-inline instead. */
.lz-form-aligned .lz-help-inline
.lz-form-message-inline
  display: inline-block
  *display: inline
  *zoom: 1
  vertical-align: middle

.lz-form-aligned textarea
  vertical-align: top

/* Aligned Forms */
.lz-form-aligned .lz-control-group
  margin-bottom: 0.5em

.lz-form-aligned .lz-control-group label
  text-align: right
  display: inline-block
  vertical-align: middle
  width: 10em
  margin: 0 1em 0 0

.lz-form-aligned .lz-controls
  margin: 1.5em 0 0 10em

/* Rounded Inputs */
.lz-form input.lz-input-rounded
.lz-form .lz-input-rounded
  border-radius: 2em
  padding: 0.5em 1em

/* Grouped Inputs */
.lz-form .lz-group fieldset
  margin-bottom: 10px

.lz-form .lz-group input
  display: block
  padding: 10px
  margin: 0
  border-radius: 0
  position: relative
  top: -1px

.lz-form .lz-group input:focus
  z-index: 2

.lz-form .lz-group input:first-child
  top: 1px
  border-radius: 4px 4px 0 0

.lz-form .lz-group input:last-child
  top: -2px
  border-radius: 0 0 4px 4px

.lz-form .lz-group button
  margin: 0.35em 0

.lz-form .lz-input-1
  width: 100%

.lz-form .lz-input-2-3
  width: 66%

.lz-form .lz-input-1-2
  width: 50%

.lz-form .lz-input-1-3
  width: 33%

.lz-form .lz-input-1-4
  width: 25%

/* Inline help for forms */
/* NOTE: lz-help-inline is deprecated. Use .lz-form-message-inline instead. */
.lz-form .lz-help-inline
.lz-form-message-inline
  display: inline-block
  padding-left: 0.3em
  color: #666
  vertical-align: middle
  font-size: 0.875em

/* Block help for forms */
.lz-form-message
  display: block
  color: #666
  font-size: 0.875em

@media only screen and (phone)
  .lz-form button[type="submit"]
    margin: 0.7em 0 0

.lz-form input:not([type])
.lz-form input[type="text"]
.lz-form input[type="password"]
.lz-form input[type="email"]
.lz-form input[type="url"]
.lz-form input[type="date"]
.lz-form input[type="month"]
.lz-form input[type="time"]
.lz-form input[type="datetime"]
.lz-form input[type="datetime-local"]
.lz-form input[type="week"]
.lz-form input[type="number"]
.lz-form input[type="search"]
.lz-form input[type="tel"]
.lz-form input[type="color"]
.lz-form label
    margin-bottom: 0.3em
    display: block

.lz-group input:not([type])
.lz-group input[type="text"]
.lz-group input[type="password"]
.lz-group input[type="email"]
.lz-group input[type="url"]
.lz-group input[type="date"]
.lz-group input[type="month"]
.lz-group input[type="time"]
.lz-group input[type="datetime"]
.lz-group input[type="datetime-local"]
.lz-group input[type="week"]
.lz-group input[type="number"]
.lz-group input[type="search"]
.lz-group input[type="tel"]
.lz-group input[type="color"]
    margin-bottom: 0

  .lz-form-aligned .lz-control-group label
    margin-bottom: 0.3em
    text-align: left
    display: block
    width: 100%

  .lz-form-aligned .lz-controls
    margin: 1.5em 0 0 0

  /* NOTE: lz-help-inline is deprecated. Use .lz-form-message-inline instead. */
.lz-form .lz-help-inline
.lz-form-message-inline
.lz-form-message
    display: block
    font-size: 0.75em
    /* Increased bottom padding to make it group with its related input element. */
    padding: 0.2em 0 0.8em

